{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true
  },
  "include": ["src/index.ts", "./declaration.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    ".storybook",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
